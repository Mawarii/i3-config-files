exec --no-startup-id numlockx on

# camera fix
exec --no-startup-id cameractrls -c backlight_compensation=0
exec --no-startup-id cameractrls -c brightness=150

# enable dark mode for gnome tools
exec --no-startup-id gsettings set org.gnome.desktop.interface color-scheme prefer-dark

# enable floating for gnome-calculator
for_window [class="(?i)gnome-calculator"] floating enable

# restart displaylink.service and set the monitor
exec --no-startup-id $HOME/scripts/fix-third-monitor.sh

# move keepassxc to scratchpad when opened
for_window [instance="(?i)keepassxc"] floating enable, resize set 1300 900, move scratchpad

# enable picom (opacity)
exec --no-startup-id picom

